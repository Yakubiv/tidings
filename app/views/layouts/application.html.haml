%html
  %head
    %title Tidings
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body.home
    %section.c-pageheader.c-pageheader--home
      %header.header
        .header__content.box
          .header__logo
            %a{ href: '' }
              = image_tag 'logo-white.png'
          %ul.header__social
            %li
              %i.fa.fa-facebook
            %li
              %i.fa.fa-instagram
            %li
              %i.fa.fa-twitter
          .header__search
            Search
          %nav.header__nav-wrap
            %ul.header__nav
              %li.current
                %a{ href: '' } Home
              %li
                %a{ href: '' } Categories
              %li
                %a{ href: '' } About
              %li
                %a{ href: '' } Contact
    = yield
