!!!
%html
  %head
    = render 'layouts/ga' if Rails.env.production?
    = yield(:og_propeties)
    = render 'layouts/head'
  %body.main
    = render 'layouts/fb_code'
    %section.c-pageheader
      = render 'layouts/header'
    %section.c-content
      .c-content--wrap
        .row
          .col-md-3
            = render 'layouts/top_news', posts: Post.where(status: :published).recent.last(15)
          .col-md-9
            = yield
    = render 'layouts/popular', posts: Post.where(popular: true).first(6)
    = render 'layouts/footer'
