%section.c-pageheader.c-pageheader--home
  = render 'layouts/header'
  .c-pageheader-content.box
    .u-full-widht
      .featured
        .featured__column.featured__column--big
          = render 'featured', post: @home_facade.posts.first
        .featured__column.featured__column--small
          = render 'featured', post: @home_facade.posts.last
          = render 'featured', post: @home_facade.posts.last

%section.c-content
  .c-content--wrap
    .c-cards
      = render partial: 'posts/post', collection: @home_facade.posts

%section.c-popular
  .box.top
    .row
      .col-md-8
        %h3 Popular posts
        .row.c-popular__posts
          - Post.all.each do |post|
            .col-md-6
              .c-popular__post
                .c-popular__thumb
                  = image_tag post.thumbnail_url(:medium_thumb)
                %h5= post.title
                .c-popular__meta
                  = post.created_at.strftime(Post::FULL_DATE)
      .col-md-4
        .c-popular__about
          %h3 Коротко про нас
          %p
            sakd sjkhfasfajkh fkjasfa
            s ajksa fhsa f
          %ul.c-popular__about-social
            %li
              %i.fa.fa-facebook
            %li
              %i.fa.fa-instagram
            %li
              %i.fa.fa-twitter
