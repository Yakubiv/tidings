= form_for [:admin, @post], html: { multipart: true } do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.label :title
    = f.text_field :title, class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description, class: 'form-control'
  .form-group
    = f.file_field :thumbnail
    = f.hidden_field :thumbnail_cache
    - if f.object.thumbnail
      = image_tag f.object.thumbnail.url(:medium_thumb)

  .form-group
    = f.cktext_area :content
  .form-group
    = f.label :url_alies
    = f.text_field :url_alies, class: 'form-control'
  .form-group
    = f.label :tags
    = f.text_field :tags, class: 'form-control'
  .form-group
    = f.submit 'Save', class: 'btn btn-success'
