%h3.page-header Dashboard

.row
  .col-md-4
    .card.card-content.--midnight-bg.text-white
      .card-content--wrapper
        .card-content--wrapper-left
          Кількість постів на сайті
        .card-content--wrapper-right
          = @posts.size
  .col-md-4
    .card.card-content.--green-bg.text-white
      .card-content--wrapper
        .card-content--wrapper-left
          Кількість переглядів постів
        .card-content--wrapper-right
          = @posts.sum(:impressions_count)
  .col-md-4
    .card.card-content.--blue-bg.text-white
      .card-content--wrapper
        .card-content--wrapper-left
          Обратна связь
        .card-content--wrapper-right
          = @contacts.size