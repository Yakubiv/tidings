= cache post do
  .c-card-box
    .c-card
      %a{ href: post_path(post) }
        .c-card__thumb{ style: "background-image: url(#{post.thumbnail.url(:medium_thumb)})" }
          .c-card__category
            = post.show(:category)
      .c-card__content
        %h1.c-card__title
          = link_to post.title, post
        %span.c-card__meta-data
          = l post.publish_at, format: Post::SHORT_DATE
          %i.fa.fa-eye
          = post.impressions_count
